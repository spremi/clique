{
	"name": "clique-header",
	"displayName": "Clique Header",
	"description": "Create file header based on information in package.json",
	"version": "0.0.1",
	"license": "BSD-3-Clause",
	"icon": "assets/clique.png",
	"engines": {
		"vscode": "^1.33.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.cliqueFH"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": [
			{
				"title": "Clique Header",
				"properties": {
					"clique.commentOpen": {
						"type": "string",
						"default": "//",
						"description": "Character(s) to open file header.",
						"scope": "window"
					},
					"clique.commentClose": {
						"type": "string",
						"default": "//",
						"description": "Character(s) to close file header.",
						"scope": "window"
					},
					"clique.commentBody": {
						"type": "string",
						"default": "//",
						"description": "Character(s) to start each line in file header body.",
						"scope": "window"
					},
					"clique.initialSpaces": {
						"type": "number",
						"default": 1,
						"description": "Number of empty spaces after start of comment body.",
						"scope": "window"
					},
					"clique.includeCopyright": {
						"type": "boolean",
						"default": false,
						"description": "Include copyright message?",
						"scope": "window"
					},
					"clique.longLicense": {
						"type": "boolean",
						"default": false,
						"description": "Use long license text? Applies only when documentation tags aren't used.",
						"scope": "window"
					},
					"clique.useTags": {
						"type": "boolean",
						"default": false,
						"description": "Use documentation tags?",
						"scope": "window"
					},
					"clique.tagAuthor": {
						"type": "string",
						"default": "@author",
						"description": "Docmentation tag to be used for author name",
						"scope": "window"
					},
					"clique.tagProject": {
						"type": "string",
						"default": "@project",
						"description": "Docmentation tag to be used for project name",
						"scope": "window"
					},
					"clique.tagLicense": {
						"type": "string",
						"default": "@license",
						"description": "Docmentation tag to be used for license name",
						"scope": "window"
					},
					"clique.textCopyright": {
						"type": "string",
						"default": "Copyright (c) %YYYY%. %AUTHOR%.",
						"description": "Copyright text to be used, if enabled.",
						"scope": "window"
					},
					"clique.customLicense": {
						"type": "boolean",
						"default": false,
						"description": "Use custom license information? Applies only when no license is specified in package.json.",
						"scope": "window"
					},
					"clique.customLicenseId": {
						"type": "string",
						"default": "CUSTOM",
						"description": "Short identifier for custom license.",
						"scope": "window"
					},
					"clique.customLicenseText": {
						"type": "string",
						"default": "Licensed under CUSTOM terms described in the file LICENSE.TXT.",
						"description": "One line text for custom license.",
						"scope": "window"
					}
				}
			}
		],
		"commands": [
			{
				"command": "extension.cliqueFH",
				"title": "Clique: Insert file header"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"tslint": "^5.12.1",
		"@types/node": "^10.12.21",
		"@types/mocha": "^2.2.42"
	}
}
